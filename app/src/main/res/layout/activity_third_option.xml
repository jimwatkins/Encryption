<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.pro.encryptor.encryption.ThirdOption">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCustomKeyInput"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Encrypt"
        android:id="@+id/btnEncryptCustomKey"
        android:layout_below="@+id/txtCustomKeyInput"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:onClick="EncryptwAES" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Enter Key Below"
        android:id="@+id/textView2"
        android:layout_above="@+id/txtCustomKeyInput"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtOption3Input"
        android:layout_alignParentTop="true"
        android:layout_marginTop="73dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Enter Txt Below"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/txtOption3Input"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="33dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCustomEncryptedOutput"
        android:layout_below="@+id/btnEncryptCustomKey"
        android:layout_marginTop="29dp"
        android:layout_alignEnd="@+id/btnEncryptCustomKey"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Encrypted Text Below"
        android:id="@+id/textView4"
        android:layout_below="@+id/btnEncryptCustomKey"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
